<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hadder"
    android:orientation="horizontal"
    android:weightSum="5"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:id="@+id/menusub"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back"
            android:id="@+id/navigation"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:id="@+id/homeiconlayout"
        android:layout_weight="2.6"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/name"
            android:gravity="center"
            android:text="Grocery Shopper"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/speec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/speec" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/wishlist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--  <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/heart"
            android:layout_gravity="center"
            />-->


        <RelativeLayout
            android:id="@+id/wishlisticon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"

            android:gravity="center">

            <LinearLayout
                android:id="@+id/wishlest"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/heart" />


            </LinearLayout>

            <TextView
                android:id="@+id/wishquanity"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignRight="@+id/wishlest"
                android:layout_alignTop="@+id/wishlest"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/texview_design"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/hadder"
                android:textSize="14dp"
                android:textStyle="normal" />
        </RelativeLayout>


        <!-- <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginTop="5dp"
                 android:src="@drawable/heart"
                 android:layout_gravity="center"
                 />
     -->


    </LinearLayout>
