<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/footer"
    android:orientation="horizontal"
    android:weightSum="4"
    >


    <LinearLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:src="@drawable/menunew" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="5dp"
            android:text="Menu"
            android:textColor="@color/icon"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_cart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/llcheck_out"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/cartnew" />


            </LinearLayout>

            <TextView
                android:id="@+id/txt_item_quantity"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/texview_design"
                android:gravity="center"
                android:padding="0dp"
                android:textColor="@color/hadder"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/llcheck_out"
                android:layout_toEndOf="@+id/llcheck_out" />

            <TextView
                android:id="@+id/txt_item_price"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="@drawable/priceback"
                android:gravity="left|center"
                android:text="0.0"
                android:padding="1dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/llcheck_out"
                android:layout_toEndOf="@+id/llcheck_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Check Out"
                android:textColor="@color/icon"
                android:textSize="13dp"

                />
        </RelativeLayout>


        <!-- <ImageView
             android:layout_width="25dp"
             android:layout_height="25dp"
             android:layout_marginTop="5dp"
             android:src="@drawable/shopping"
             android:layout_gravity="center"
             />
 -->

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/notification"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bell"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:textSize="13dp"
            android:textColor="@color/icon"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom|center"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/more"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_share_icon1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="13dp"
            android:textColor="@color/icon"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom|center"
            android:id="@+id/textView4" />

    </LinearLayout>
</LinearLayout>
