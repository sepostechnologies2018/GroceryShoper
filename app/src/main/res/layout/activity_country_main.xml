<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:id="@+id/mainlayout"
    tools:context="com.app_web.technology.groceryshopper.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">
        <include layout="@layout/subhadder" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/search_boxd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="4">

        <EditText
            android:id="@+id/search_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2.5"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:hint="@string/search_hint"
            android:paddingBottom="12dp"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@color/textviewbackground"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/cancked"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@color/white"
            android:padding="5dp"
            android:paddingBottom="12dp"
            app:srcCompat="@drawable/finish"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:orientation="vertical"
        android:id="@+id/inflate"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewmain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >
        <include layout="@layout/newfootersub" />
    </LinearLayout>
</LinearLayout>