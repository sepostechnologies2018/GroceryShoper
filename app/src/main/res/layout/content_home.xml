<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:id="@+id/mainlayout"
    tools:context="com.app_web.technology.groceryshopper.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        >
        <include layout="@layout/mainhadder" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="4"
        android:id="@+id/search_boxd"
        android:visibility="visible"
        android:background="@color/red"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/search_box"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textSize="15dp"
            android:layout_marginBottom="2dp"
            android:hint="Search by Product or Category Name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:id="@+id/cancked"
            android:layout_marginRight="5dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/finish"
            android:padding="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:orientation="vertical"
        android:id="@+id/inflate"
        >
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >
        <include layout="@layout/newfootersub" />
    </LinearLayout>
</LinearLayout>